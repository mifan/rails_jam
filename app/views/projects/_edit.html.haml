#normal-input
  - form_for(@project) do |f|
    .input-space
      = f.label :name, "Name:",:class => 'title'
      = f.text_field :name ,{:class => 'space' }
    .input-space
      = f.label :description, "Description:",:class => 'title'
      = f.text_area :description, :class => 'space', :rows => 5
    .input-space
      = f.label :home_page, "Home Page", :class => 'title'
      = f.text_field :home_page ,{:class => 'space' }
    .input-space
      = f.label :source_link, "Source Url", :class => 'title'
      = f.text_field :source_link ,{:class => 'space' }
    .input-space
      = f.label :demo_link, "Demo Link", :class => 'title'
      = f.text_field :demo_link ,{:class => 'space' }      
    .input-space
      = f.label :tags, "Tags", :class => 'title'
      = text_field_tag("project[tag_list]", @project.tag_list,:class => "space")
      %span (separated with comma)
    %div
      = f.submit 'Next', :class => 'submit'
